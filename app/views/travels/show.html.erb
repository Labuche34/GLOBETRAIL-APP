<div class="content-container">

<div class="mapbox-container" style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<br>
<div>
  <h1>New stop</h1>
  <%= simple_form_for [@travel, @stop] do |f| %>
    <%= f.input :city %>
    <%= f.submit "Submit stop", class: "button text-center" %>
  <% end %>
</div>
<br>
<div>
  <p><strong>Stops</strong></p>
  <ul class="list-group">
    <% @travel.stops.each do |stop| %>
      <li class="list-group-item"><%= stop.city %></li>
    <% end %>
  </ul>
</div>
