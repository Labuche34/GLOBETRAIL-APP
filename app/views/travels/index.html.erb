<div class="page-container">
  <div class="row text-center my-3" id="header">
    <h1>Explore the World, One Trip at a Time</h1>
    <p>Your Travel Bucket List Starts Here! 🌍🧳✈️</p>
  </div>

  <div class="content-container">
    <div class="travels-container">
      <% @travels.each do |travel| %>
        <%= link_to travel_path(travel), class: "travel-card-link" do %>
          <div class="travel-card">
            <img src="https://media.istockphoto.com/id/1954635163/fr/photo/vue-a%C3%A9rienne-dune-plage-sereine-avec-des-collines-verdoyantes-un-ciel-bleu-clair-et-des.jpg?s=612x612&w=0&k=20&c=uSREwQdBb5IWhEi9swM8PpmNXajM54GAxuuVU6m4ZCI=">
            <div class="travel-card-infos">
              <div class="d-flex justify-content-between travel-infos">
                <h2 style="font-size: 16px; font-weight: bold; margin: 0; color: #219ebc;">
                <%= travel.country %>
                </h2>
                <div class="trip-description">
                <p>
                  Number of travellers: <%= travel.number_of_travellers %><br>
                  Trip duration: <%= travel.trip_duration %> days<br>
                  Maximum budget: <%= travel.budget %> €
                </p>
                </div>
                <% if travel.user == current_user %>
                  <div class="d-flex flex-column gap-2">
                    <%= link_to edit_travel_path(travel), class: "btn btn-sm button-stop-card" do%>
                    <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/></svg>                <% end %>
                    <%= link_to travel_path(travel),  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip ?" }, class: "btn btn-sm button ml-2 button-stop-card" do%>
                    <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="row m-3 link">
      <%= link_to "Add a new travel", new_travel_path, class: "button btn btn-primary link-btn", style: "text-decoration: none;" %>
    </div>
  </div>
</div>
