<div class="container col-12">

  <div class="row text-center my-3 header">
    <h1>Let’s plan your next adventure! 🌍</h1>
  </div>

  <div class="row content">
    <%= simple_form_for @travel do |f| %>
      <%= f.input :country, collection: ISO3166::Country.all %>
      <%= f.input :number_of_travellers %>
      <%= f.input :budget %>
      <%= f.input :departure_date, as: :string, input_html: { class: "datepicker", autocomplete: "off" } %>
      <%= f.input :return_date, as: :string, input_html: { class: "datepicker", autocomplete: "off" } %>
      <%= f.input :departure_city %>
      <%= f.input :travellers_type, collection: ["Solo", "Couple", "Family with young kids", "Family with teenagers", "Group of friends"] %>
      <div class="btn-centerred">
        <%= f.button :submit, "Create your trip", class: "all-button" %>
      </div>
    <% end %>
  </div>
</div>
